generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}


model User {
  id        Int   @id @default(autoincrement())
  first_name String
  last_name String
  contact String
  dob DateTime
  address String
  postal_code Int
  email     String   @unique
  password  String
  bio String? @default("")
  avatar String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id Int @id @default(autoincrement())
  repo_id Int @unique
  project_name String?
  repo_name String
  html_url String
  description String?
  language String?
  clone_url String
  show_case Boolean @default(true)
  status String @default("in-progress")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}